<head>    
	<script src="http://code.jquery.com/jquery-1.5.js"></script>
    <script>
    	 setTimeout(function() {
        $('#successMessage').fadeOut('fast');
       }, 3000);
      function countChar(val) {
        var len = val.value.length;
        if (len >= 150) {
          val.value = val.value.substring(0, 150);
        } else {
          $('#charNum').text(150 - len);
        }
      };
    </script>
</head>
<body class="background-color">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand navbar-center" href="/">fwitter</a>
    </div>
    <div  class="padding-right">
    <ul class="nav navbar-nav navbar-right">
    	<li class="left-divider"><a href="/logout"><span class="glyphicon glyphicon-log-out gi-2x"></span></a></li>

    	<li><form method="get" action="/tweets/new" ><button class="btn btn-md btn-info btn-block roundify navbtn" type="submit"><strong>fweet</strong></button></form></li>
    </ul>
    </div>
  </div>
</nav>

<div class="container">
	<div class="row"> 

	  <div class="col-md-3">
	     <div class="col-md-12 content-box">
	     	<div class="row">
	     	<div class="col-md-4">
		     	<a href="#" class="profile-pic">
	  				<div class="profile-pic" style="background-image: url('<%= @user.profile_image %>')" >
	  				</div>
					</a>
				</div>
				<div class="col-md-8">
	        		<h4>@<%=@user.username%></h4>
	        		<p>Fweets: <%= @user.tweets.size%></p>
	      		</div>
	     </div>
	     	<%if !@current_user.following.include?(@user) && @current_user != @user%>
	     			<br>
	     				<form action="/follow/<%= @current_user.id %>/new" method="post">
		        			<button class="btn btn-sm btn-primary roundify pull-left" name="follow" value="<%=@user.id %>" type="submit"><strong>follow</strong></button>
		        		</form>
	     		
	     	<%end%>
	     	<%if @current_user.following.include?(@user) && @current_user != @user%>
	     			<br>
	     			<form method="/users/<%=@user.slug%>/following/<%=@current_user.slug%>/delete" action="post">
	     				<button class="pull-left btn btn-primary btn-sm roundify"><strong>Unfollow</strong></button>
	     			</form>
	     	<%end%>
	     </div>
	  </div>

	  <div class="col-md-6">
				<%tweets =  @user.tweets.all.sort_by{|tweet|tweet.created_at}.reverse%>
				<%if tweets.empty?%>
				<div class="col-md-12 content-box">
					<h4><strong><%=@user.username%> has not made any fweets.</strong></h4>
				</div>
				<%end%>
	        <% tweets.each do |tweet|%>
	        	<div class="col-md-12 content-box div-style">
	        		<div class="row">
	        		<div class="col-md-1 bottom-border">
		        		<a href="/users/<%= tweet.user.slug%>">
									<div class="profile-badge" style="background-image: url('<%= tweet.user.profile_image %>')" ></div>
								</a>
							<a href="/tweets/<%=tweet.id%>">
							</div>
							<div class="col-md-10 col-md-offset-1">
		        		
		        		<h6><%="@#{tweet.user.username} - #{tweet.created_at.localtime}"%></h6>
		        		<div class="no-style"><%=tweet.content%></div>
		        	</div>
		        	</div>
		        	<br>
		        		<%if !tweet.picture.empty?%>
		        		<div class="col-md-12">
		        			<img class="user-pic" src="<%= tweet.picture %>">
		        		</div>
		        		<% end %>
		        	
	        	</div>
	        	<div class="col-xs-12 xs-spacer"></div>
	        	</a>
	        <% end %>
	        <br>
	  </div>

	  	  <div class="col-md-3">
	     <div class="col-md-12 content-box">
	        <h4><strong>Who to Follow</strong></h4>
	        <%@cool_people.each do |user|%>
	        	<%next if user.id == @user.id || user.id == @current_user.id%>
	        	<div class="row bottom-border">
	        		<a href="/users/<%=user.slug %>">
		        	<div class="col-sm-4"><div class="profile-badge" style="background-image: url('<%= user.profile_image %>')" ></div></div>
		        	</a>
		        	<div class="col-sm-8">
		        		<h6><%="@#{user.username}"%></h6>
		        		<form action="/follow/<%= @current_user.id %>/new" method="post">
		        			<button class="btn btn-sm btn-primary roundify pull-left" name="follow" value="<%=user.id %>" type="submit"><strong>follow</strong></button>
		        		</form>
		        		<div class=" col-md-12 small-spacer"></div>
		        	</div>
	        	</div>
	        <%end%>
	     </div>
	  </div>
	</div>
	<!-- end of row -->
</div>
</body>